    <footer class="bg-black text-white py-20 relative overflow-hidden">
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 25% 25%, #3b82f6 0%, transparent 50%), radial-gradient(circle at 75% 75%, #8b5cf6 0%, transparent 50%);"></div>
        </div>
        
        <div class="container mx-auto px-4 relative z-10">
            <div class="text-center mb-16">
                <div class="wholesale-logo mx-auto">
                    <div class="wholesale-logo-text" style="color: #ffffff; text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);">
                        <span class="wholesale">Wholesale</span>.<span class="education">Education</span>
                    </div>
                    <div class="wholesale-logo-line" style="box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);"></div>
