    <script>
        // Marketplace data
        const marketplaces = <%- JSON.stringify(marketplaces) %>;

        // Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const filterButtons = document.querySelectorAll('.filter-btn');
            const marketplaceGrid = document.getElementById('marketplace-grid');

            // Load all marketplaces initially
            loadMarketplaces(marketplaces);

            // Add click event listeners to filter buttons
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    // Add active class to clicked button
                    this.classList.add('active');

                    const category = this.getAttribute('data-category');
                    let filteredMarketplaces;

                    if (category === 'all') {
                        filteredMarketplaces = marketplaces;
                    } else {
                        filteredMarketplaces = marketplaces.filter(marketplace => 
                            marketplace.category === category
                        );
                    }

                    loadMarketplaces(filteredMarketplaces);
                });
            });
        });

        function loadMarketplaces(marketplacesToShow) {
            const marketplaceGrid = document.getElementById('marketplace-grid');
            marketplaceGrid.innerHTML = '';

            marketplacesToShow.forEach((marketplace, index) => {
                const card = createMarketplaceCard(marketplace, index);
                marketplaceGrid.appendChild(card);
            });
        }

        function createMarketplaceCard(marketplace, index) {
            const card = document.createElement('div');
            card.className = `marketplace-card bg-white rounded-2xl p-6 shadow-lg hover-lift fade-in stagger-${(index % 6) + 1}`;
            
            const categoryIcon = getCategoryIcon(marketplace.category);
            const regionFlag = getRegionFlag(marketplace.region);

            card.innerHTML = `
                <div class="flex items-center justify-between mb-4">
                    <div class="text-3xl">${categoryIcon}</div>
                    <div class="text-2xl">${regionFlag}</div>
                </div>
                
                <h3 class="text-xl font-bold mb-2">${marketplace.platform}</h3>
                <p class="text-sm text-gray-500 mb-3">${marketplace.category} • ${marketplace.region}</p>
                
                <p class="text-gray-600 mb-4 text-sm">${marketplace.description}</p>
                
                <div class="space-y-2 mb-4">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500">Fees:</span>
                        <span class="font-semibold">${marketplace.fees}</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500">Traffic:</span>
                        <span class="font-semibold">${marketplace.traffic}</span>
                    </div>
                </div>
                
                <div class="mb-4">
                    <span class="text-xs text-gray-500">Best for:</span>
                    <p class="text-sm text-gray-700">${marketplace.bestFor}</p>
                </div>
                
                <button class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm">
                    Learn More
                </button>
            `;

            return card;
        }

        function getCategoryIcon(category) {
            const icons = {
                'Global / Marketplace': '🌐',
                'Regional Marketplace': '🏪',
                'Classifieds': '📱',
                'Fashion Resale': '👗',
                'Electronics': '📱',
                'Collectible': '🎨',
                'Auctions': '🔨',
                'Wholesale': '📦',
                'B2B Sourcing': '🏭',
                'Dropshipping': '🚚',
                'Social Commerce': '🎥',
                'Specialty Marketplace': '🎯',
                'Aggregator': '🔗'
            };
            return icons[category] || '🛒';
        }

        function getRegionFlag(region) {
            const flags = {
                'Global': '🌍',
                'US': '🇺🇸',
                'China': '🇨🇳',
                'India': '🇮🇳',
                'EU': '🇪🇺',
                'LatAm': '🌎',
                'SEA': '🌏',
                'Japan/Global': '🇯🇵',
                'UK/AU': '🇬🇧',
                'US/JP': '🇺🇸',
                'Luxury/US': '💎',
                'Luxury/EU/US': '💎',
                'Luxury/Global': '💎',
                'Men\'s fashion': '👔',
                'Women\'s fashion': '👗',
                'Children\'s fashion': '👶',
                'Sneakers/Streetwear': '👟',
                'Sneakers': '👟',
                'Art/Antique': '🎨'
            };
            return flags[region] || '🌍';
        }

        // Add intersection observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all animated elements
        document.querySelectorAll('.fade-in, .slide-in-left, .slide-in-right, .scale-in, .bounce-in').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            observer.observe(el);
        });
    </script>
</body>
