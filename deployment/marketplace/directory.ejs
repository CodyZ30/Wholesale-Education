<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marketplace Directory - Wholesale.Education</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Import logo styles */
        .wholesale-logo {
            display: inline-block;
            text-align: center;
            position: relative;
            padding: 10px;
        }

        .wholesale-logo-text {
            font-size: 1.8rem;
            font-weight: bold;
            color: #1f2937;
            text-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 8px;
            position: relative;
            animation: logoTextGlow 3s ease-in-out infinite alternate;
        }

        .wholesale-logo-text .wholesale {
            display: inline-block;
            animation: slideInLeft 1s ease-out;
        }

        .wholesale-logo-text .education {
            display: inline-block;
            animation: slideInRight 1s ease-out 0.3s both;
        }

        .wholesale-logo-line {
            width: 120px;
            height: 4px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);
            border-radius: 6px;
            margin: 0 auto;
            position: relative;
            animation: logoLineDraw 2s ease-out 0.8s both, logoLineGlow 3s ease-in-out infinite alternate 2.8s;
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.3);
        }

        .wholesale-logo-line::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);
            border-radius: 8px;
            z-index: -1;
            filter: blur(6px);
            opacity: 0;
            animation: logoPulseGlow 2s ease-in-out infinite alternate 2.8s;
        }

        @keyframes logoTextGlow {
            0% { text-shadow: 0 0 20px rgba(0, 0, 0, 0.1); }
            100% { text-shadow: 0 0 30px rgba(59, 130, 246, 0.3), 0 0 40px rgba(147, 51, 234, 0.2); }
        }

        @keyframes slideInLeft {
            0% { transform: translateX(-50px); opacity: 0; }
            100% { transform: translateX(0); opacity: 1; }
        }

        @keyframes slideInRight {
            0% { transform: translateX(50px); opacity: 0; }
            100% { transform: translateX(0); opacity: 1; }
        }

        @keyframes logoLineDraw {
            0% { width: 0; opacity: 0; }
            100% { width: 120px; opacity: 1; }
        }

        @keyframes logoLineGlow {
            0% { box-shadow: 0 0 15px rgba(59, 130, 246, 0.3); }
            100% { box-shadow: 0 0 25px rgba(59, 130, 246, 0.6), 0 0 35px rgba(147, 51, 234, 0.3); }
        }

        @keyframes logoPulseGlow {
            0% { opacity: 0; }
            100% { opacity: 0.7; }
        }

        /* Animation classes */
        .fade-in { animation: fadeIn 1s ease-out; }
        .slide-in-left { animation: slideInLeft 0.8s ease-out; }
        .slide-in-right { animation: slideInRight 0.8s ease-out; }
        .scale-in { animation: scaleIn 0.6s ease-out; }
        .bounce-in { animation: bounceIn 0.8s ease-out; }
        .stagger-1 { animation-delay: 0.1s; }
        .stagger-2 { animation-delay: 0.2s; }
        .stagger-3 { animation-delay: 0.3s; }
        .stagger-4 { animation-delay: 0.4s; }
        .stagger-5 { animation-delay: 0.5s; }
        .stagger-6 { animation-delay: 0.6s; }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideInLeft {
            from { opacity: 0; transform: translateX(-50px); }
            to { opacity: 1; transform: translateX(0); }
        }

        @keyframes slideInRight {
            from { opacity: 0; transform: translateX(50px); }
            to { opacity: 1; transform: translateX(0); }
        }

        @keyframes scaleIn {
            from { opacity: 0; transform: scale(0.9); }
            to { opacity: 1; transform: scale(1); }
        }

        @keyframes bounceIn {
            0% { opacity: 0; transform: scale(0.3); }
            50% { opacity: 1; transform: scale(1.05); }
            70% { transform: scale(0.9); }
            100% { opacity: 1; transform: scale(1); }
        }

        .hover-lift {
            transition: all 0.3s ease;
        }
        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .marketplace-card {
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }
        .marketplace-card:hover {
            border-color: #3b82f6;
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(59, 130, 246, 0.2);
        }

        .filter-btn {
            transition: all 0.3s ease;
        }
        .filter-btn.active {
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            color: white;
        }
    </style>
</head>
