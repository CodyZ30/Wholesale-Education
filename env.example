# Wholesale Education Platform - Dev V0.1
# Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application Name
APP_NAME="Wholesale Education Platform"
APP_VERSION="0.1.0"
APP_ENV="development"
APP_DEBUG=true
APP_URL="http://localhost:8000"
APP_TIMEZONE="UTC"

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# SQLite Database
DB_CONNECTION="sqlite"
DB_PATH="./wholesale_education.db"
DB_FOREIGN_KEYS=true

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Application Secret Key (generate a random 32-character string)
APP_KEY="your-32-character-secret-key-here"

# JWT Secret Key
JWT_SECRET="your-jwt-secret-key-here"

# Session Configuration
SESSION_DRIVER="file"
SESSION_LIFETIME=86400
SESSION_ENCRYPT=false

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Settings
MAIL_MAILER="smtp"
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USERNAME="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="noreply@wholesale-education.com"
MAIL_FROM_NAME="Wholesale Education"

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"
UPLOAD_PATH="./uploads"

# ===========================================
# API CONFIGURATION
# ===========================================

# API Settings
API_RATE_LIMIT=100
API_RATE_WINDOW=60
API_VERSION="v1"

# ===========================================
# FEATURE FLAGS
# ===========================================

# Feature Flags
FEATURE_CHAT=true
FEATURE_FORUMS=true
FEATURE_CERTIFICATES=true
FEATURE_ANALYTICS=true
