{
  "name": "wholesale-education-platform",
  "version": "0.1.0",
  "description": "Professional wholesale education platform with modern design and comprehensive features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./public/css/output.css --watch",
    "build:js": "webpack --mode production",
    "dev:css": "tailwindcss -i ./assets/css/input.css -o ./public/css/output.css --watch",
    "dev:js": "webpack --mode development --watch",
    "setup": "node setup-database.js",
    "deploy": "npm run build && npm run test",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "wholesale",
    "education",
    "learning",
    "platform",
    "business",
    "ecommerce",
    "supplier",
    "marketplace"
  ],
  "author": {
    "name": "Cody Z",
    "email": "cody@wholesale-education.com",
    "url": "https://github.com/CodyZ30"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodyZ30/Wholesale-Education.git"
  },
  "bugs": {
    "url": "https://github.com/CodyZ30/Wholesale-Education/issues"
  },
  "homepage": "https://github.com/CodyZ30/Wholesale-Education#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-session": "^1.17.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "terser-webpack-plugin": "^5.3.9"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
