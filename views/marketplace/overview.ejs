            width: 120px;
            height: 4px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);
            border-radius: 6px;
            margin: 0 auto;
            position: relative;
            animation: logoLineDraw 2s ease-out 0.8s both, logoLineGlow 3s ease-in-out infinite alternate 2.8s;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
        }

        @keyframes logoTextGlow {
            0% { text-shadow: 0 0 20px rgba(0, 0, 0, 0.1); }
            100% { text-shadow: 0 0 30px rgba(59, 130, 246, 0.3), 0 0 40px rgba(147, 51, 234, 0.2); }
        }

        @keyframes logoLineDraw {
            0% { width: 0; opacity: 0; }
            100% { width: 120px; opacity: 1; }
        }

        @keyframes logoLineGlow {
            0% { box-shadow: 0 0 15px rgba(59, 130, 246, 0.3); }
            100% { box-shadow: 0 0 25px rgba(59, 130, 246, 0.6), 0 0 35px rgba(147, 51, 234, 0.3); }
