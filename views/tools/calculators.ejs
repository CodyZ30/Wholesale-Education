                        <select id="toCountry" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">Select country</option>
                            <option value="us">United States</option>
                            <option value="cn">China</option>
