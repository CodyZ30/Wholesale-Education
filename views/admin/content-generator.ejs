<script>
document.addEventListener('DOMContentLoaded', function() {
    // Content generation functionality
    const generateBtn = document.getElementById('generate-content');
    const previewBtn = document.getElementById('preview-content');
    const previewPanel = document.getElementById('preview-panel');
    const progressPanel = document.getElementById('progress-panel');
    
    generateBtn.addEventListener('click', function() {
        const count = document.getElementById('content-count').value;
        const type = document.getElementById('content-type').value;
        
        // Show progress panel
        progressPanel.style.display = 'block';
        
        // Simulate content generation
        simulateContentGeneration(parseInt(count));
    });
    
    previewBtn.addEventListener('click', function() {
        previewPanel.style.display = 'block';
        document.getElementById('preview-content').innerHTML = `
            <h3>Sample Generated Content</h3>
            <h4>Wholesale Coffee Beans by the Container - Colombia Suppliers & Pricing Guide</h4>
            <p>Complete guide to buying coffee beans wholesale by the container in Colombia. Find verified suppliers, pricing, MOQ, and shipping info.</p>
            <h5>Introduction to Wholesale Coffee Beans</h5>
            <p>Wholesale coffee beans represents one of the most lucrative opportunities in the food sector. With growing demand and competitive pricing, buying coffee beans wholesale by the container can significantly reduce costs while maintaining quality standards.</p>
        `;
    });
    
    document.getElementById('close-preview').addEventListener('click', function() {
        previewPanel.style.display = 'none';
    });
    
    function simulateContentGeneration(count) {
        let generated = 0;
        let saved = 0;
        let errors = 0;
        
        const interval = setInterval(() => {
            generated += Math.floor(Math.random() * 10) + 1;
            saved += Math.floor(Math.random() * 8) + 1;
            if (Math.random() < 0.1) errors += 1;
            
            const progress = (generated / count) * 100;
            
            document.getElementById('progress-fill').style.width = progress + '%';
            document.getElementById('generated-count').textContent = generated;
            document.getElementById('saved-count').textContent = saved;
            document.getElementById('error-count').textContent = errors;
            document.getElementById('progress-text').textContent = `Generated ${generated} of ${count} pages...`;
            
            if (generated >= count) {
                clearInterval(interval);
                document.getElementById('progress-text').textContent = `‚úÖ Successfully generated ${count} pages!`;
                setTimeout(() => {
                    progressPanel.style.display = 'none';
                }, 3000);
            }
        }, 100);
    }
});
</script>
